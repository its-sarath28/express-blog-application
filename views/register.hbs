<title>{{title}}</title>

<div class="row login-content">
    <div class="col-12 d-flex flex-column align-items-center justify-content-center">
        <div action="" class="bg-white p-4 rounded rounded-lg border border-1 shadow-lg">
            <h3 class="text-start fw-bold">Register</h3>

            <form action="/user/register" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <input type="text" placeholder="First name" name="firstName" class="form-control" value="{{#if values.firstName}}{{values.firstName}}{{/if}}">
                    </div>
                    <div class="col-md-6 mt-3 mt-md-0">
                        <input type="text" placeholder="Last name" name="lastName" class="form-control" value="{{#if values.lastName}}{{values.lastName}}{{/if}}">
                    </div>
                </div>
                <div class="mt-3">
                    <input type="text" placeholder="Email" name="email" class="form-control" value="{{#if values.email}}{{values.email}}{{/if}}">
                </div>
                <div class="mt-3">
                    <input type="password" placeholder="Password" name="password" class="form-control">
                </div>
                <div class="mt-3">
                    <input type="password" placeholder="Confirm Password" name="cnfPassword" class="form-control">
                </div>
                <div class="mt-3">
                    <input type="submit" value="Register" class="btn btn-primary">
                </div>
            </form>
        </div>
        <p>Already have an account ? <a href="/user/login">Login</a></p>
    </div>
</div>